<%- include('layout/header') %>





  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <% if (message) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>
              <%= message %>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-dark text-center">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Password</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (users.length===0) { %>
              <tr>
                <td colspan="5">
                  <h2 class="text-center">No Users Found</h2>
                </td>
              </tr>
              <% }else{ %>
                <% users.forEach((user,row)=> { %>
                  <tr>
                    <td>
                      <%= row %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.password %>
                    </td>
                    <td>
                      <div class="btn-group">
                        <a href="/edit/<%= user._id %>" class="btn btn-danger btn-sm mx-1" style="border-radius: 100%;">
                          <i class="fas fa-edit"></i> </a>
                        <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm mx-1"
                          style="border-radius: 100%;">
                          <i class="fas fa-trash"></i> </a>
                      </div>

                    </td>
                  </tr>
                  <% }); }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('layout/footer') %>